  purrr,
  checkmate,
  RDML,
  shiny,
  stringr,
  whisker,
  plotly,
  RColorBrewer
Collate:
  'global.R'
  'pcrPlate-input.R'
  'renderCurves.R'
  'runExample.R'
Suggests:
  knitr,
  chipPCR
RoxygenNote: 6.1.1
